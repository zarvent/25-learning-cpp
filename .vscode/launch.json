{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run C++",
            "type": "node-terminal",
            "request": "launch",
            "command": "g++ '${file}' -o '${fileDirname}/${fileBasenameNoExtension}.exe' && '${fileDirname}/${fileBasenameNoExtension}.exe'",
            "cwd": "${workspaceFolder}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}
